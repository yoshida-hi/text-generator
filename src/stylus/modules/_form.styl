.m-form
  overflow hidden
  width 1024px
  margin 0 auto
  padding-top 60px

  &__container
    overflow hidden

  &__item
    overflow hidden
    margin 20px 0 0
    line-height 1.5

    &:first-child
      margin-top 0

    dt
      display inline-block
      vertical-align middle
      width 80px
      font-size 18px

    dd
      display inline-block
      vertical-align middle
      width 80%
      margin 0

      input[type=text]
        width 60%
        padding 10px

      select
        height: 42px
        margin-left 20px
        padding 10px
        line-height: 42px

    &-list
      overflow hidden
      display inline-block
      vertical-align middle
      list-style none
      margin 0 0 0 20px
      padding 0

      li
        float left
        margin-right 10px

        &:last-child
          margin-right 0

    &-label
      input[type=checkbox]
        margin-right 10px;

  &__button
    width 200px
    margin 40px auto 0

    button
      cursor pointer
      background-color inherit
      border-radius 4px
      padding 10px 20px
      color #333
      transition background-color .3s ease-in-out

      &:hover
        background-color #fff5a9

.m-form
  overflow hidden
  width 1024px
  margin 0 auto

  &__container
    overflow hidden

  &__item
    overflow hidden
    line-height 1.5

    dt
      float left
      width 120px
      font-size 18px
      font-weight bold

    dd
      overflow hidden

  &__button
    width 200px
    margin 0 auto

    button
      cursor pointer
      background-color inherit
      border-radius 4px
      padding 10px 20px
      color #333
      transition background-color .3s ease-in-out

      &:hover
        background-color #fff5a9
